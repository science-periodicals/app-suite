{
  "name": "@scipe/app-suite",
  "version": "0.0.5",
  "description": "sci.pe app suite",
  "main": "dist/index.js",
  "scripts": {
    "profile": "cross-env NODE_ENV=production webpack --mode production --profile --json > stats.json && webpack-bundle-analyzer stats.json public/assets",
    "cloudant": "docker restart cloudant-developer",
    "log-cloudant": "docker logs cloudant-developer",
    "register": "cross-env DB_NAME=scienceai librarian register -u sebastien -p pass -e test+sebastien@sci.pe && cross-env DB_NAME=scienceai librarian register -u erik -p pass -e test+erik@sci.pe && cross-env DB_NAME=scienceai librarian register -u tiffany -p pass -e test+tiffany@sci.pe -r typesetter && cross-env DB_NAME=scienceai librarian register -u jordan -p pass -e test+jordan@sci.pe && cross-env DB_NAME=scienceai librarian register -u rob -p pass -e test+rob@sci.pe && cross-env DB_NAME=scienceai librarian register -u jen -p pass -e test+jen@sci.pe && cross-env DB_NAME=scienceai librarian register -u peter -p pass -e test+peter@sci.pe && cross-env DB_NAME=scienceai librarian register -u anton -p pass -e test+anton@sci.pe && cross-env DB_NAME=scienceai librarian register -u lea -p pass -e test+lea@sci.pe && cross-env DB_NAME=scienceai librarian register -u edith -p pass -e test+edith@sci.pe -r admin && cross-env DB_NAME=scienceai librarian create-org -u edith -p pass -n org -i org",
    "pretest": "cross-env DB_NAME=test-app-suite npm run create-auth-db && cross-env DB_NAME=test-app-suite npm run push-auth-db && cross-env DB_NAME=test-app-suite npm run delete-db && cross-env DB_NAME=test-app-suite npm run create-db && cross-env DB_NAME=test-app-suite npm run push-ddoc && cross-env DB_NAME=test-app-suite npm run set-couchdb-auth && cross-env DB_NAME=test-app-suite npm run reset-redis",
    "just-test": "cross-env DB_NAME=test-app-suite CI=true mocha --require @babel/register --exit",
    "test": "npm run just-test",
    "set-couchdb-auth": "librarian secure",
    "format": "prettier --single-quote --write \"{src,test}/**/*.js\"",
    "redis": "redis-server /usr/local/etc/redis.conf",
    "reset-redis": "librarian reset-redis",
    "init-ontologist": "(cd ./node_modules/@scipe/ontologist && ./scripts/seed.sh)",
    "seed-services": "librarian seed-services",
    "init": "npm run delete-auth-db && npm run create-auth-db && npm run push-auth-db && npm run delete-db && npm run create-db && npm run push-ddoc && npm run set-couchdb-auth && npm run reset-redis && npm run init-ontologist && npm run seed-services && npm run cloudant",
    "create-auth-db": "curl -XPUT ${COUCH_PROTOCOL:=http:}//${COUCH_ADMIN_USERNAME:=admin}:${COUCH_ADMIN_PASSWORD:=pass}@${COUCH_HOST:=127.0.0.1}:${COUCH_PORT:=5984}/${COUCH_AUTH_DB:=_users}",
    "delete-auth-db": "curl -XDELETE ${COUCH_PROTOCOL:=http:}//${COUCH_ADMIN_USERNAME:=admin}:${COUCH_ADMIN_PASSWORD:=pass}@${COUCH_HOST:=127.0.0.1}:${COUCH_PORT:=5984}/${COUCH_AUTH_DB:=_users}",
    "push-auth-db": "./node_modules/.bin/couchapp push ./node_modules/@scipe/ddoc-auth/ddoc.js ${COUCH_PROTOCOL:=http:}//${COUCH_ADMIN_USERNAME:=admin}:${COUCH_ADMIN_PASSWORD:=pass}@${COUCH_HOST:=127.0.0.1}:${COUCH_PORT:=5984}/${COUCH_AUTH_DB:=_users}",
    "create-db": "curl -XPUT ${COUCH_PROTOCOL:=http:}//${COUCH_ADMIN_USERNAME:=admin}:${COUCH_ADMIN_PASSWORD:=pass}@${COUCH_HOST:=127.0.0.1}:${COUCH_PORT:=5984}/${DB_NAME:=scienceai}",
    "delete-db": "curl -XDELETE ${COUCH_PROTOCOL:=http:}//${COUCH_ADMIN_USERNAME:=admin}:${COUCH_ADMIN_PASSWORD:=pass}@${COUCH_HOST:=127.0.0.1}:${COUCH_PORT:=5984}/${DB_NAME:=scienceai}",
    "push-ddoc": "./node_modules/.bin/couchapp push ./node_modules/@scipe/ddoc/ddoc.js ${COUCH_PROTOCOL:=http:}//${COUCH_ADMIN_USERNAME:=admin}:${COUCH_ADMIN_PASSWORD:=pass}@${COUCH_HOST:=127.0.0.1}:${COUCH_PORT:=5984}/${DB_NAME:=scienceai}",
    "start": "cross-env NODE_ENV=production BLOB_STORAGE_BACKEND=fs DB_NAME=scienceai node dist/server.js | bunyan & cross-env NODE_ENV=production BLOB_STORAGE_BACKEND=fs DB_NAME=scienceai run-workers | bunyan",
    "start-ci": "cross-env NODE_ENV=production BLOB_STORAGE_BACKEND=fs DB_NAME=scienceai CI=true node dist/server.js | bunyan & cross-env NODE_ENV=production BLOB_STORAGE_BACKEND=fs DB_NAME=scienceai run-workers | bunyan",
    "watch-server": "webpack --config webpack.config.worker.js --display errors-only && babel-node ./src/server.js | bunyan",
    "build-server": "cross-env NODE_ENV=production babel ./src --out-dir dist",
    "build-client": "rm -Rf ./public/assets/app-suite-* && cross-env NODE_ENV=production webpack --mode production --progress && cross-env NODE_ENV=production webpack --mode production --config webpack.config.worker.js --progress",
    "watch": "npm run watch-server & npm run workers",
    "watch--no-hmr": "cross-env HMR=false npm run watch-server & cross-env HMR=false npm run workers",
    "seed": "create-story -r",
    "warmup": "librarian warmup",
    "backstop:init": "backstop init",
    "backstop:prepare": "npm run init && npm run seed && npm run warmup && npm run prepare && npm start-ci",
    "backstop:reference": "backstop reference --config backstop.config.js",
    "backstop:test": "backstop test --config backstop.config.js",
    "backstop:approve": "backstop approve --config backstop.config.js",
    "backstop:kill": "pkill -f \"(chrome)?(--headless)\"",
    "backstop:open": "backstop openReport --config backstop.config.js",
    "backstop:download": "./get-artifacts.sh",
    "workers": "run-workers -l error | bunyan",
    "cp-webworkers-deps": "cp ./node_modules/papaparse/papaparse.min.js ./public/assets/papaparse.min.js && cp -r ./node_modules/xlsx/dist/ ./public/assets/xlsx/",
    "build": "rm -rf dist && npm run build-client && npm run build-server && npm run cp-webworkers-deps",
    "prepare": "rm -rf dist && npm run build-client && npm run build-server && npm run cp-webworkers-deps",
    "postversion": "git push && git push --tags"
  },
  "eslintConfig": {
    "extends": "@scipe"
  },
  "prettier": {
    "singleQuote": true
  },
  "babel": {
    "presets": [
